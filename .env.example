# Tiingo API Configuration
TIINGO_API_KEY=your_api_key_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Comma-separated list of allowed Telegram user IDs (leave empty to allow all users)
TELEGRAM_WHITELIST=123456789,987654321

# Gemini AI
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# Interactive Brokers (Live 7496, Paper 7497)
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# === GUARDRAILS (HARDCODED SAFETY LIMITS) ===
# Comma-separated list of allowed account numbers (orders to other accounts will be blocked)
ALLOWED_ACCOUNTS=U18888888,U19999999
# Maximum quantity per single order (orders above this will be blocked)
MAX_ORDER_QUANTITY=100
# Maximum allowed slippage percentage between Tiingo trigger price and IBKR market price
SLIPPAGE_TOLERANCE=1.0
