# === BROKER SELECTION ===
# Choose which broker to use: "ibkr" or "hyperliquid"
BROKER=ibkr

# === MARKET DATA ===
# Tiingo API for stock data (required for IBKR, optional for Hyperliquid)
TIINGO_API_KEY=your_api_key_here

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Comma-separated list of allowed Telegram user IDs (leave empty to allow all users)
TELEGRAM_WHITELIST=123456789,987654321

# === AI AGENT (Poe OpenAI-compatible API) ===
# Get your API key at https://poe.com/api_key (requires Poe subscription)
POE_API_KEY=your_api_key_here
# Model name on Poe (e.g., glm-4.7, Claude-Opus-4.1, GPT-4o)
# Thinking mode is enabled automatically in agent.py via enable_thinking parameter
POE_MODEL=glm-4.7

# === INTERACTIVE BROKERS (when BROKER=ibkr) ===
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# === HYPERLIQUID (when BROKER=hyperliquid) ===
# Your wallet private key (64 hex chars, with or without 0x prefix)
# Get from: https://app.hyperliquid.xyz/API (create API wallet)
# The wallet address is automatically derived from this key
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
# Use testnet for paper trading (true/false)
# Mainnet: https://api.hyperliquid.xyz
# Testnet: https://api.hyperliquid-testnet.xyz
HYPERLIQUID_TESTNET=false

# === GUARDRAILS (HARDCODED SAFETY LIMITS) ===
# Maximum allowed slippage percentage between trigger price and market price
SLIPPAGE_TOLERANCE=1.0

# IBKR guardrails
IBKR_ALLOWED_ACCOUNTS=U18888888,U19999999
IBKR_MAX_ORDER_QUANTITY=100

# Hyperliquid guardrails
HYPERLIQUID_ALLOWED_ACCOUNTS=hl-0x123456
HYPERLIQUID_MAX_ORDER_QUANTITY=2.0
